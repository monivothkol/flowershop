{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    // "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "vite.config.ts",
    "vite.config.vue",
    "src/**/*.ts",
    "src/**/*.vue",
    "vite.config.ts"
, "src/Router.js"  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    },
  },

  
}
